---
import Header from '../components/top/Header.astro'
import '../styles/global.css'

export type HeaderTranslations = {
  header: {
    advertiser: string;
    publisher: string;
	company_overview: string;
	contact: string;
  }
}

interface Props {
	t: HeaderTranslations;
	disabledLocales?: string[]; 
}

const {t, disabledLocales} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Header t={t} disabledLocales={disabledLocales} />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		/* height: 100%; */
	}
</style>
